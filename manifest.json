{
  "manifest_version": 3,
  "name": "Focus Mode",
  "version": "1.0",
  "permissions": ["storage", "tabs", "notifications", "scripting:"],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icon.png",
          "48": "icon.png",
          "128": "icon.png"
      }
  }
}
